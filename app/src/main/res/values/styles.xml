<resources>
    <color name="black">#000000</color>
    <color name="white">#ffffff</color>
    <color name="grey">#aaaaaa</color>
    <color name="darkgreen">#228021</color>
    <color name="lightgreen">#4fcf4f</color>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/lightgreen</item>
    </style>
    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/lightgreen</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
